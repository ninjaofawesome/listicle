<script src="./app/js/images.js"></script>

<section class="newsfeed">
  <ul class="newsfeed__article-list">
  {{#each article}}
    <li class="newsfeed__article-item">
      <div class="newsfeed__eyebrow">
        <time class="newsfeed__eyebrow--time">11AM</time>
        {{#if topic}}
        <span class="newsfeed__eyebrow--topic">{{topic}}</span>
        {{/if}}
      </div>
      <h2 class="newsfeed-article__title">{{title}}</h2>
      <p class="newsfeed-article__author">By {{author}}</p>
      <img class="newsfeed-article__poster-img" src="{{image}}" alt="{{alt}}">
      <p class="newsfeed-article__deck">{{deck}}</p>
      <a class="newsfeed__link" href="{{url}}" target="_blank">read more</a>
    </li>
  {{/each}}
  </ul>
</section>